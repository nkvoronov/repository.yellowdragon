<?xml version="1.0" encoding="UTF-8"?>
<addon id="{addonid}" name="{name}" version="{version}" provider-name="{author}">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="{name}">
        <info compressed="{compressed}">{url}{branch}{output_path}addons.xml</info>
        <checksum>{url}{branch}{output_path}addons.xml.md5</checksum>
        <datadir zip="{zip}">{datadir}{branch}{output_path}</datadir>
        <hashes>{hashes}</hashes>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">{summary_en} {kodi}</summary>
        <summary lang="ru">{summary_ru} {kodi}</summary>
        <description  lang="en">{description_en}</description>
        <description  lang="ru">{description_ru}</description>
        <platform>all</platform>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
        <news>{news}</news>
    </extension>
</addon>